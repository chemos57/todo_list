<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">Todo List</h1>

  <div class="mb-6">
    <%= link_to 'New Todo', new_todo_path, class: 'bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600' %>
  </div>

  <div class="mb-6">
    <%= link_to 'All', todos_path, class: "mr-4 #{params[:filter].nil? ? 'font-bold' : ''}" %>
    <%= link_to 'Pending', todos_path(filter: 'pending'), class: "mr-4 #{params[:filter] == 'pending' ? 'font-bold' : ''}" %>
    <%= link_to 'Completed', todos_path(filter: 'completed'), class: "#{params[:filter] == 'completed' ? 'font-bold' : ''}" %>
  </div>

  <div class="bg-white shadow-md rounded-lg">
    <% @todos.each do |todo| %>
      <div class="border-b p-4 flex items-center justify-between">
        <div class="flex items-center">
          <div class="<%= todo.completed ? 'line-through text-gray-500' : '' %>">
            <h3 class="font-semibold"><%= todo.title %></h3>
            <p class="text-gray-600"><%= todo.description %></p>
          </div>
        </div>
        <div>
          <%= link_to 'Edit', edit_todo_path(todo), class: 'text-blue-500 hover:text-blue-700 mr-4' %>
          <%= button_to 'Delete', todo_path(todo), method: :delete, class: 'text-red-500 hover:text-red-700', data: { confirm: 'Are you sure?' } %>
        </div>
      </div>
    <% end %>
  </div>
</div>
