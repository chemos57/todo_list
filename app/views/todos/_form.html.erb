<%= form_with(model: todo, local: true, class: "max-w-lg mx-auto") do |f| %>
  <% if todo.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
      <h2><%= pluralize(todo.errors.count, "error") %> prohibited this todo from being saved:</h2>
      <ul>
        <% todo.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= f.label :title, class: "block text-gray-700 font-bold mb-2" %>
    <%= f.text_field :title, class: "w-full px-3 py-2 border rounded-lg" %>
  </div>

  <div class="mb-4">
    <%= f.label :description, class: "block text-gray-700 font-bold mb-2" %>
    <%= f.text_area :description, class: "w-full px-3 py-2 border rounded-lg" %>
  </div>

  <div class="mb-4">
    <%= f.label :completed, class: "block text-gray-700 font-bold mb-2" %>
    <%= f.check_box :completed %>
  </div>

  <div class="flex justify-between">
    <%= f.submit class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
    <%= link_to 'Back', todos_path, class: "bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600" %>
  </div>
<% end %>
