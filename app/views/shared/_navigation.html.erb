<nav class="main-navigation" role="navigation">
  <div class="nav-container">
    <ul class="nav-list">
      <li class="<%= active_link?('dashboard') %>">
        <%= link_to dashboard_path do %>
          <i class="fas fa-home"></i>
          <span>Dashboard</span>
        <% end %>
      </li>
      
      <li class="<%= active_link?('projects') %>">
        <%= link_to projects_path do %>
          <i class="fas fa-project-diagram"></i>
          <span>Projects</span>
        <% end %>
      </li>
      
      <li class="<%= active_link?('team') %>">
        <%= link_to team_path do %>
          <i class="fas fa-users"></i>
          <span>Team</span>
        <% end %>
      </li>
      
      <li class="<%= active_link?('reports') %>">
        <%= link_to reports_path do %>
          <i class="fas fa-chart-bar"></i>
          <span>Reports</span>
        <% end %>
      </li>
    </ul>
    
    <div class="nav-secondary">
      <button class="theme-toggle" data-controller="theme">
        <i class="fas fa-moon"></i>
      </button>
      
      <div class="search-container">
        <%= form_with url: search_path, method: :get, local: true, class: "search-form" do |f| %>
          <%= f.text_field :q, 
                          placeholder: "Search...", 
                          class: "search-input",
                          data: { 
                            controller: "search",
                            action: "keyup->search#suggest"
                          } %>
        <% end %>
      </div>
    </div>
  </div>
</nav>
